        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="eventService"
          class="pl.dolega.springcore.service.EventServiceImpl" />
    <bean id="ticketService"
          class= "pl.dolega.springcore.service.TicketServiceImpl" />
    <bean id="userService"
          class="pl.dolega.springcore.service.UserServiceImpl" />
</beans>